<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telaCadastro">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTituloCadastro"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Cadastro de material"
            android:textAlignment="viewStart"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/edtCodMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Código do material"
            android:ems="10"
            android:hint="Código do material"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/edtNomeMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome do material"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <EditText
            android:id="@+id/edtQtdMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Quantidade do material"
            android:inputType="textPersonName"
            android:minHeight="60dp" />

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Cadastrar"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnVoltarCadastro"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="65dp"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>